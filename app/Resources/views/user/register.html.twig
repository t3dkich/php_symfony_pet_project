{% extends 'base.html.twig' %}

{% block body %}

    {% for msg in app.session.flashbag.get('info') %}
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">Ã—</a>
            {{ msg }}
        </div>
    {% endfor %}
    <div class="row justify-content-center mt-5">
        <div class="well col-md-4 mt-5">
            <h2 class="text-center mt-5 display-4">
                Register Here
            </h2>
            <form class="form-horizontal mt-5" method="post">
                <div class="form-group">
                    <label for="user[email]">Email address</label>
                    <input type="email" class="form-control text-center" name="user[email]" id="user[email]"
                           aria-describedby="emailHelp"
                           placeholder="Enter email">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                        else.
                    </small>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="user[name]">Your Name</label>
                    <input type="text" class="form-control text-center" name="user[name]" id="user[name]"
                           placeholder="Enter your first name">
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="user[password][first]">Password</label>
                    <input type="password" class="form-control text-center" name="user[password][first]"
                           id="user[password][first]" placeholder="Password">
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="user[password][second]">Repeat Password</label>
                    <input type="password" class="form-control text-center" name="user[password][second]"
                           id="user[password][second]"
                           placeholder="Repeat Password">
                </div>
                {{ form_row(form._token) }}
                <div class="row">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                    <div class="col-md-6 margin-2">
                        <a id="lnk" class="nav-link offset-7" href="{{ path('security_login') }}">Login</a>
                    </div>
                </div>
                <style>

                </style>

            </form>
        </div>
    </div>
{% endblock %}
