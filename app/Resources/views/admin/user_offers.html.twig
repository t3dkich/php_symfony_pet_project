{% extends 'base.html.twig' %}

{% block body %}
    {% if pagination|length > 0 %}
    <div class="container body-content">

        <div class="row">
            <table>
                {# @var offer \AppBundle\Entity\Offer#}
                {% for offer in pagination %}
                    <tr {% if loop.index is odd %}class="color"{% endif %}>
                        <div class="card mr-5 mb-5" style="width: 18rem;">

                            <img class="card-img-top" height="200px"
                                 src="{{ asset('uploads/animal_images/' ~ offer.animal.picture) }}"
                                 alt="Card image cap">

                            <div class="card-body">
                                <small>State</small>
                                <h5 class="card-title"
                                        {% if offer.state == 'open' %} style="color: forestgreen" {% endif %}
                                        {% if offer.state == 'cancelled' %} style="color: red" {% endif %}
                                        {% if offer.state == 'sold' %} style="color: blue" {% endif %}>{{ offer.state }}</h5>
                                <hr>
                                {% if offer.state == 'sold' %}
                                    <small>Sold to user</small>
                                    <h5 class="card-title" style="color: blue">{{ offer.endPointUser.email }}</h5>
                                    <hr>
                                {% endif %}
                                <small>Title</small>
                                <h5 class="card-title">{{ offer.title }}</h5>
                                <hr>
                                <small>Description</small>
                                <p class="card-text">{{ offer.animal.description }}</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <small>Animal Type:</small> {{ offer.animalType.name }}
                                </li>
                                <li class="list-group-item">
                                    <small>Category:</small> {{ offer.category.name }}
                                </li>
                                {% if offer.animal.name %}
                                    <li class="list-group-item">
                                        <small>Animal Name:</small>{{ offer.animal.name }}
                                    </li>
                                {% endif %}
                                {% if offer.price %}
                                    <li class="list-group-item">
                                        <small>Price:</small>{{ offer.price }}
                                        <small> lv</small>
                                    </li>
                                {% endif %}
                                <li class="list-group-item">
                                    <small>Bidders on offer:</small> {{ offer.bidders|length }}
                                </li>
                                <li class="list-group-item">
                                    <small>Date added:</small> {{ offer.dateAdded|date('d-M-Y') }}
                                </li>
                            </ul>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <a class="btn btn-primary pull-right"
                                           href="{{ path('offer_details', {'id' : offer.id}) }}">Read more &raquo;</a>
                                    </div>
                                    {% if offer.state == 'open' %}
                                        <div class="col-md-6 margin-2">
                                            <a class="btn btn-danger"
                                               href="{{ path('admin_cancel_offer', {'offerId' : offer.id, 'userId': offer.user.id}) }}">Cancel offer
                                                &raquo;</a>
                                        </div>
                                    {% elseif offer.state == 'cancelled' %}
                                        <div class="col-md-6 margin-2">
                                            <a class="btn btn-success"
                                               href="{{ path('admin_reopen_offer', {'offerId' : offer.id, 'userId': offer.user.id}) }}">Open for sale
                                                &raquo;</a>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <br/>
                    </tr>
                {% endfor %}
            </table>
            {# display navigation #}
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
    {% else %}
        <h1 class="text-center">{{ user.email }} has no offer of any kind</h1>
    {% endif %}
{% endblock %}